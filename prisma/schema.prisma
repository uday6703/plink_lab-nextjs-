generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Round {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  status          String   // CREATED | STARTED | REVEALED
  nonce           String
  commitHex       String
  serverSeed      String?
  clientSeed      String
  combinedSeed    String
  pegMapHash      String
  rows            Int
  dropColumn      Int
  binIndex        Int
  payoutMultiplier Float
  betCents        Int
  pathJson        Json
  revealedAt      DateTime?
}
